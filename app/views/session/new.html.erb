<% provide(:title,'后台登录') %>
<style type="text/css">
    body {padding-top: 40px;padding-bottom: 40px;background-color: #f5f5f5;}
    .form-signin {max-width: 300px;padding: 19px 29px 29px;margin: 0 auto 20px;background-color: #fff;border: 1px solid #e5e5e5;-webkit-border-radius: 5px;-moz-border-radius: 5px;border-radius: 5px;-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);-moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);box-shadow: 0 1px 2px rgba(0,0,0,.05);}
    .form-signin .form-signin-heading, .form-signin .checkbox {margin-bottom: 10px;}
    .form-signin input[type="text"],
    .form-signin input[type="password"] {font-size: 16px;height: auto;margin-bottom: 15px;padding: 7px 9px;}
    .error_box {width:200px;margin:0 auto;color:#f00;}
</style>
<%   if session[:error] %>
<% then %>
<div class="error_box"><%=session[:error]%></div>
<% end %>
<%= form_for(:login, url:session_index_path,html:{class:'form-signin'}) do |f| %>
    <h2 class="form-signin-heading">登录</h2>
    <%= f.text_field :email,placeholder:"请输入邮箱",class:'input-block-level'  %>
    <%= f.password_field :password,placeholder:"请输入密码",class:'input-block-level'  %>
    <%= f.submit "登录",class:'btn btn-large btn-primary'  %>
    <%= link_to "注册",new_reg_path,class:'btn btn-large btn-primary' ,html: ""%>
<% end %>
